<div class="container mt-5">
  <div class="card p-3">
    <h1 class="text-success">Movies in "<%= @list.name %>"</h1>
    <h2>Bookmarks</h2>
    <ul>
      <% @list.bookmarks.each do |bookmark| %>
        <li>
          <strong><%= bookmark.movie.title %></strong> - <%= bookmark.comment %>
          <%= link_to "delete the list", bookmark_path(bookmark), class: "btn btn-cancel", data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this bookmark?" } %>
        </li>
      <% end %>
    </ul>

    <%= link_to "Add Bookmark", new_list_bookmark_path(@list) %>

    <%= link_to "< home", lists_path%>
  </div>
</div>
